<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/bulletView"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="@dimen/bullet_size"
        android:layout_height="@dimen/bullet_size"
        android:layout_marginTop="@dimen/bullet_top_margin"
        android:layout_marginEnd="@dimen/bullet_right_margin"
        android:baseline="7dp"
        android:background="@drawable/list_circle"
        app:layout_constraintBaseline_toBaselineOf="@+id/listRowTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/listRowTv" />

    <TextView
        android:id="@+id/listRowTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:tag="listRowTv"
        android:layout_marginLeft="4dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:text="Sometext Sometext Sometext Sometext Sometext Sometext Sometext Sometext Sometext Sometext Sometext Sometext Sometext "
        app:layout_constraintLeft_toRightOf="@id/bulletView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>